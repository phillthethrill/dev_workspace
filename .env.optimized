# =============================================================================
# UNIVERSAL MEDIA TRACKER - OPTIMIZED CONFIGURATION
# =============================================================================

# Server Configuration
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# Database Configuration
DB_PATH=./data/media_tracker_optimized.db
DB_POOL_SIZE=10
DB_TIMEOUT=30000
DB_WAL_MODE=true

# Performance & Caching
ENABLE_COMPRESSION=true
CACHE_TTL=300000
CACHE_MAX_SIZE=1000
CLEANUP_INTERVAL=60000

# Security Configuration
ENABLE_HELMET=true
ENABLE_CORS=true
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com
API_KEYS=your-api-key-1,your-api-key-2
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
SEARCH_RATE_LIMIT_MAX=10
SEARCH_RATE_LIMIT_WINDOW=60000

# External APIs
TMDB_API_KEY=your-tmdb-api-key
JUSTWATCH_API_KEY=your-justwatch-api-key
AUDIBLE_API_KEY=your-audible-api-key

# File Paths
AUDIBLE_LIBRARY_PATH=./data/audible_library.xlsx
DATA_DIR=./data
LOG_DIR=./logs

# Scheduler Configuration
UPDATE_INTERVAL=0 */6 * * *
HEALTH_CHECK_INTERVAL=30000

# Monitoring & Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log
PERFORMANCE_MONITORING=true
ENABLE_METRICS_ENDPOINT=true

# Request Limits
MAX_REQUEST_SIZE=10mb
REQUEST_TIMEOUT=10000
MAX_CONCURRENT_REQUESTS=5

# Memory & Resource Limits
MAX_MEMORY_USAGE=512MB
MAX_CPU_USAGE=80

# Email & Notifications (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
NOTIFICATION_EMAIL=your-email@gmail.com

# Docker Configuration
DOCKER_TAG=latest
DOCKER_REGISTRY=your-registry.com
DOCKER_BUILDKIT=1

# PM2 Configuration
PM2_INSTANCES=max
PM2_MAX_MEMORY=512M
PM2_MIN_UPTIME=10s
PM2_MAX_RESTARTS=5

# =============================================================================
# OPTIMIZATION FLAGS
# =============================================================================

# Enable/disable specific features for fine-tuning
ENABLE_VIRTUAL_SCROLL=true
ENABLE_LAZY_LOADING=true
ENABLE_SERVICE_WORKER=true
ENABLE_OFFLINE_MODE=true
ENABLE_ANALYTICS=false

# Performance tuning
ENABLE_DB_OPTIMIZATION=true
ENABLE_QUERY_CACHING=true
ENABLE_RESPONSE_COMPRESSION=true
ENABLE_STATIC_CACHE=true

# Development flags (set to false in production)
ENABLE_DEBUG_LOGS=false
ENABLE_DEV_TOOLS=false
ENABLE_HOT_RELOAD=false